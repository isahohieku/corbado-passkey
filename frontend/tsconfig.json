{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "strict": true,
      "jsx": "preserve",
      "importHelpers": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "baseUrl": ".",
      "types": [
        "webpack-env",
        "jest",
      ],
      "paths": {
        "@/*": [
          "src/*"
        ],
      },
      "lib": [
        "ES6",
        "dom",
        "dom.iterable",
        "scripthost"
      ],
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.vue",
      "tests/**/*.ts",
      "tests/**/*.tsx", "api/utils/paginate.ts",
    ],
    "exclude": [
      "node_modules"
    ]
  }